<h1>Welcome to the Longest Game</h1>


  <% @game_letters.each do |letter| %>
  <p class="btn btn-primary letter">
    <%= letter %>
  </p>
  <% end %>

<form action="/score" method="POST" class="guess">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
   <%= hidden_field_tag :game_letters, @game_letters %>
  <input type="text" name="word" placeholder="Input your word!">
  <input type="submit">
</form>
